<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_box_white"
    android:gravity="center"
    android:paddingTop="17dp"
    android:paddingBottom="17dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/tvLecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ct_black"
        android:text="강의내용"/>

    <TextView
        android:id="@+id/tvRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ct_black"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="강의실"/>

    <EditText
        android:id="@+id/etMemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ct_black"
        android:minLines="5"
        android:hint="메모"
        android:textColorHint="@color/ct_dark_grey"
        android:background="@drawable/solid_box_light_grey"
        android:padding="5dp"
        android:imeActionId="@+id/updateMemo"
        android:imeActionLabel="저장"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btnRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평가하기"
            android:background="@drawable/stroke_box_white"/>

        <View android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnStudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공부하기"
            android:background="@drawable/stroke_box_white"/>
   </LinearLayout>
</LinearLayout>